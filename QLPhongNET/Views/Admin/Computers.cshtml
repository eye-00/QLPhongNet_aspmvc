@model IEnumerable<QLPhongNET.Models.Computer>

@{
    ViewData["Title"] = "Quản lý máy tính";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <a href="@Url.Action("CreateComputer")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm máy tính
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <!-- Thống kê -->
    <div class="row">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Máy trống</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(c => c.Status == ComputerStatus.Available)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-desktop fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Máy đang sử dụng</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(c => c.Status == ComputerStatus.InUse)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Máy bảo trì</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(c => c.Status == ComputerStatus.Maintenance)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-wrench fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên máy</th>
                            <th>Loại máy</th>
                            <th>Giá/giờ</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Category?.Name</td>
                                <td>@item.Category?.PricePerHour.ToString("N0") VNĐ</td>
                                <td>
                                    @{
                                        var (badgeClass, statusText) = item.Status switch
                                        {
                                            ComputerStatus.Available => ("success", "Trống"),
                                            ComputerStatus.InUse => ("primary", "Đang sử dụng"),
                                            ComputerStatus.Maintenance => ("warning", "Bảo trì"),
                                            _ => ("secondary", "Không xác định")
                                        };
                                    }
                                    <span class="badge badge-@badgeClass">@statusText</span>
                                </td>
                                <td>
                                    <a href="@Url.Action("EditComputer", new { id = item.ID })" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                }
            });
        });
    </script>
} 