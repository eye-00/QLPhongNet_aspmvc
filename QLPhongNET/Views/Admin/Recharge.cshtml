@model IEnumerable<QLPhongNET.Models.RechargeRequest>
@{
    ViewData["Title"] = "Quản lý nạp tiền";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="rechargeTable">
                    <thead class="table-light">
                        <tr>
                            <th>Người dùng</th>
                            <th>Số tiền</th>
                            <th>Thời gian yêu cầu</th>
                            <th>Thời gian xử lý</th>
                            <th>Trạng thái</th>
                            <th>Ghi chú</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.User?.Username</td>
                                <td class="text-end">@item.Amount.ToString("N0") VNĐ</td>
                                <td>@item.RequestTime.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td>@(item.ProcessedTime?.ToString("dd/MM/yyyy HH:mm:ss") ?? "-")</td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case QLPhongNET.Models.RechargeStatus.Pending:
                                            <span class="badge bg-warning">Chờ duyệt</span>
                                            break;
                                        case QLPhongNET.Models.RechargeStatus.Approved:
                                            <span class="badge bg-success">Đã duyệt</span>
                                            break;
                                        case QLPhongNET.Models.RechargeStatus.Rejected:
                                            <span class="badge bg-danger">Đã từ chối</span>
                                            break;
                                    }
                                </td>
                                <td>@(item.Note ?? "-")</td>
                                <td>
                                    @if (item.Status == QLPhongNET.Models.RechargeStatus.Pending)
                                    {
                                        <div class="btn-group">
                                            <form asp-action="ProcessRecharge" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.ID" />
                                                <input type="hidden" name="action" value="approve" />
                                                <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Xác nhận phê duyệt yêu cầu nạp tiền?')">
                                                    <i class="fas fa-check"></i> Duyệt
                                                </button>
                                            </form>
                                            <button type="button" class="btn btn-danger btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#rejectModal@(item.ID)">
                                                <i class="fas fa-times"></i> Từ chối
                                            </button>
                                        </div>

                                        <!-- Modal từ chối -->
                                        <div class="modal fade" id="rejectModal@(item.ID)" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Từ chối yêu cầu nạp tiền</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <form asp-action="ProcessRecharge" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@item.ID" />
                                                        <input type="hidden" name="action" value="reject" />
                                                        <div class="modal-body">
                                                            <div class="mb-3">
                                                                <label class="form-label">Lý do từ chối</label>
                                                                <textarea name="note" class="form-control" rows="3" required></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                            <button type="submit" class="btn btn-danger">Xác nhận từ chối</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#rechargeTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
                },
                order: [[2, 'desc']],
                pageLength: 10,
                responsive: true
            });
        });
    </script>
} 