@model QLPhongNET.Models.RechargeRequest
@{
    ViewData["Title"] = "Xử lý yêu cầu nạp tiền";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Xử lý yêu cầu nạp tiền</h6>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h5>Thông tin yêu cầu</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Người dùng:</dt>
                        <dd class="col-sm-8">@(Model.User?.Username ?? "Không xác định")</dd>

                        <dt class="col-sm-4">Số tiền:</dt>
                        <dd class="col-sm-8">@Model.Amount.ToString("N0") VNĐ</dd>

                        <dt class="col-sm-4">Thời gian yêu cầu:</dt>
                        <dd class="col-sm-8">@Model.RequestTime.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                        <dt class="col-sm-4">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            @switch (Model.Status)
                            {
                                case RechargeStatus.Pending:
                                    <span class="badge bg-warning">Chờ duyệt</span>
                                    break;
                                case RechargeStatus.Approved:
                                    <span class="badge bg-success">Đã duyệt</span>
                                    break;
                                case RechargeStatus.Rejected:
                                    <span class="badge bg-danger">Đã từ chối</span>
                                    break;
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            @if (Model.Status == RechargeStatus.Pending)
            {
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Process" method="post">
                            <input type="hidden" name="id" value="@Model.ID" />
                            
                            <div class="mb-3">
                                <label for="note" class="form-label">Ghi chú</label>
                                <textarea class="form-control" id="note" name="note" rows="3"></textarea>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" name="approve" value="true" class="btn btn-success" 
                                        onclick="return confirm('Bạn có chắc muốn duyệt yêu cầu này?')">
                                    <i class="fas fa-check"></i> Duyệt
                                </button>
                                <button type="submit" name="approve" value="false" class="btn btn-danger" 
                                        onclick="return confirm('Bạn có chắc muốn từ chối yêu cầu này?')">
                                    <i class="fas fa-times"></i> Từ chối
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Quay lại
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Yêu cầu này đã được xử lý
                    <a asp-action="Index" class="btn btn-secondary ms-3">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div> 