@model IEnumerable<QLPhongNET.Models.RechargeRequest>
@{
    ViewData["Title"] = "Danh sách yêu cầu nạp tiền";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Danh sách yêu cầu nạp tiền</h6>
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus fa-sm"></i> Nạp tiền mới
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Thời gian yêu cầu</th>
                                    <th>Số tiền</th>
                                    <th>Trạng thái</th>
                                    <th>Thời gian xử lý</th>
                                    <th>Ghi chú</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.RequestTime.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-right">@item.Amount.ToString("N0") VNĐ</td>
                                            <td class="text-center">
                                                @switch (item.Status)
                                                {
                                                    case QLPhongNET.Models.RechargeStatus.Pending:
                                                        <span class="badge badge-warning">Đang chờ</span>
                                                        break;
                                                    case QLPhongNET.Models.RechargeStatus.Approved:
                                                        <span class="badge badge-success">Đã chấp nhận</span>
                                                        break;
                                                    case QLPhongNET.Models.RechargeStatus.Rejected:
                                                        <span class="badge badge-danger">Đã từ chối</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@(item.ProcessedTime?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                                            <td>@(item.Note ?? "-")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">Không có yêu cầu nạp tiền nào</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                }
            });
        });
    </script>
} 