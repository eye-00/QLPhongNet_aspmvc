@model QLPhongNET.Models.ServiceUsage

@{
    ViewData["Title"] = "Xóa sử dụng dịch vụ";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5>Bạn có chắc chắn muốn xóa bản ghi này?</h5>
            </div>

            <dl class="row">
                <dt class="col-sm-2">Người dùng</dt>
                <dd class="col-sm-10">@(Model.User?.FullName ?? "N/A")</dd>

                <dt class="col-sm-2">Dịch vụ</dt>
                <dd class="col-sm-10">@(Model.Service?.Name ?? "N/A")</dd>

                <dt class="col-sm-2">Số lượng</dt>
                <dd class="col-sm-10">@Model.Quantity</dd>

                <dt class="col-sm-2">Thời gian</dt>
                <dd class="col-sm-10">@Model.UsageTime.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-2">Tổng tiền</dt>
                <dd class="col-sm-10">@Model.TotalPrice?.ToString("N0") VNĐ</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ID" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>
