@model IEnumerable<QLPhongNET.Models.ServiceUsage>

@{
    ViewData["Title"] = "Lịch sử sử dụng dịch vụ";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Lịch sử sử dụng dịch vụ</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách sử dụng dịch vụ</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Người dùng</th>
                            <th>Dịch vụ</th>
                            <th>Số lượng</th>
                            <th>Thời gian</th>
                            <th>Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.User?.Username</td>
                                <td>@item.Service?.Name</td>
                                <td>@item.Quantity</td>
                                <td>@item.UsageTime.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td>@item.TotalPrice.ToString("N0") VNĐ</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
                }
            });
        });
    </script>
}
