@{
    ViewData["Title"] = "Thống kê";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Thống kê</h1>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Thống kê theo máy tính</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Xem chi tiết</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-desktop fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("ByComputer", "Statistics")" class="stretched-link"></a>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Thống kê theo người dùng</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Xem chi tiết</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("ByUser", "Statistics")" class="stretched-link"></a>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Thống kê theo thời gian</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Xem chi tiết</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("ByTime", "Statistics")" class="stretched-link"></a>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Thống kê doanh thu</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Xem chi tiết</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Revenue", "Statistics")" class="stretched-link"></a>
            </div>
        </div>
    </div>
</div> 