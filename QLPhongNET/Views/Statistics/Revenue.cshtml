@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Thống kê doanh thu";
    Layout = "_AdminLayout";
    var startDate = ViewBag.StartDate as DateTime?;
    var endDate = ViewBag.EndDate as DateTime?;
    var groupBy = ViewBag.GroupBy as string ?? "day";
    var summary = ViewBag.Summary as dynamic;
    var totalRechargeRevenue = summary?.TotalRechargeRevenue ?? 0m;
    var totalUsageRevenue = summary?.TotalUsageRevenue ?? 0m;
    var totalServiceRevenue = summary?.TotalServiceRevenue ?? 0m;
    var grandTotal = summary?.GrandTotal ?? 0m;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Thống kê doanh thu</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bộ lọc</h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="startDate" class="form-control" value="@(startDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="endDate" class="form-control" value="@(endDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Nhóm theo</label>
                    <select name="groupBy" class="form-control">
                        <option value="day" selected="@(groupBy == "day")">Ngày</option>
                        <option value="week" selected="@(groupBy == "week")">Tuần</option>
                        <option value="month" selected="@(groupBy == "month")">Tháng</option>
                        <option value="year" selected="@(groupBy == "year")">Năm</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> Lọc
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Doanh thu nạp tiền
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @totalRechargeRevenue.ToString("N0") đ
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Doanh thu sử dụng
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @totalUsageRevenue.ToString("N0") đ
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-desktop fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Doanh thu dịch vụ
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @totalServiceRevenue.ToString("N0") đ
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-concierge-bell fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Tổng doanh thu
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @grandTotal.ToString("N0") đ
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Chi tiết doanh thu</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Thời gian</th>
                            <th>Doanh thu nạp tiền</th>
                            <th>Doanh thu sử dụng</th>
                            <th>Doanh thu dịch vụ</th>
                            <th>Tổng doanh thu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @switch (groupBy)
                                    {
                                        case "week":
                                            @($"Tuần từ {item.WeekStart:dd/MM/yyyy} đến {item.WeekEnd:dd/MM/yyyy}")
                                            break;
                                        case "month":
                                            @($"Tháng {item.StartDate:MM/yyyy}")
                                            break;
                                        case "year":
                                            @($"Năm {item.StartDate:yyyy}")
                                            break;
                                        default:
                                            @item.Date.ToString("dd/MM/yyyy")
                                            break;
                                    }
                                </td>
                                <td class="text-right">@item.RechargeRevenue.ToString("N0") đ</td>
                                <td class="text-right">@item.UsageRevenue.ToString("N0") đ</td>
                                <td class="text-right">@item.ServiceRevenue.ToString("N0") đ</td>
                                <td class="text-right">@item.TotalRevenue.ToString("N0") đ</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
                },
                order: [[0, 'desc']],
                pageLength: 25
            });

            // Kiểm tra ngày bắt đầu không lớn hơn ngày kết thúc
            $('form').on('submit', function(e) {
                var startDate = new Date($('input[name="startDate"]').val());
                var endDate = new Date($('input[name="endDate"]').val());
                
                if (startDate > endDate) {
                    e.preventDefault();
                    alert('Ngày bắt đầu không được lớn hơn ngày kết thúc');
                }
            });
        });
    </script>
} 