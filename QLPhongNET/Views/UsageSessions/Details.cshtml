@model QLPhongNET.Models.UsageSession

@{
    ViewData["Title"] = "Chi tiết phiên sử dụng";
}

<div class="container">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Người dùng:</dt>
                <dd class="col-sm-9">@(Model.User?.FullName ?? "N/A")</dd>

                <dt class="col-sm-3">Máy tính:</dt>
                <dd class="col-sm-9">@(Model.Computer?.Name ?? "N/A")</dd>

                <dt class="col-sm-3">Loại máy:</dt>
                <dd class="col-sm-9">@(Model.Computer?.Category?.Name ?? "N/A")</dd>

                <dt class="col-sm-3">Giá/giờ:</dt>
                <dd class="col-sm-9">@(Model.Computer?.Category?.PricePerHour.ToString("N0") ?? "0") VNĐ</dd>

                <dt class="col-sm-3">Thời gian bắt đầu:</dt>
                <dd class="col-sm-9">@Model.StartTime.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                <dt class="col-sm-3">Thời gian kết thúc:</dt>
                <dd class="col-sm-9">@(Model.EndTime?.ToString("dd/MM/yyyy HH:mm:ss") ?? "Đang sử dụng")</dd>

                <dt class="col-sm-3">Tổng chi phí:</dt>
                <dd class="col-sm-9">@(Model.TotalCost?.ToString("N0") ?? "0") VNĐ</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">
                <i class="fas fa-edit"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
