@model IEnumerable<QLPhongNET.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">@ViewData["Title"]</h3>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Thêm người dùng mới
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Tên đăng nhập</th>
                            <th>Họ tên</th>
                            <th>Số điện thoại</th>
                            <th>Số dư</th>
                            <th>Vai trò</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Username</td>
                                <td>@item.FullName</td>
                                <td>@item.Phone</td>
                                <td>@item.Balance.ToString("N0") VNĐ</td>
                                <td>
                                    @if (item.Role == QLPhongNET.Models.UserRole.Admin)
                                    {
                                        <span class="badge bg-danger">Quản trị viên</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">Người dùng</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
